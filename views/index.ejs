<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css"> </head>
<body>

    <div class="main w-full min-h-screen bg-zinc-900 ">

        <div class="forms p-10 text-white">
            <form action="/create" method="post">
                <input class="block px-5 py-2 bg-zinc-800 w-full rounded-md"type="text" placeholder="Title goes here" name="title">
                <textarea class="block px-5 py-2 bg-zinc-800 resize-none my-2 w-full rounded-md" placeholder="Write your task details here" name="details"></textarea>
                <input class="bg-blue-600 p-2 rounded-md" type="submit" value="Create a task"> 
            </form>
        </div>

        <div class="tasks text-white p-10 flex gap-5 flex-wrap">

           <% if(files.length>0){ %>

            <% files.forEach(function(val){ %>
                <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded-md">
                    <h1 class="text-3xl tracking-tighter"><%= val%></h1>
                    <div class="flex justify-between">
                    <a href="/file/<%=val %>" class="text-blue-500 mt-3 inline-block">Read more...</a>
                    <a href="/edit/<%=val%>" class="text-blue-500 mt-3">Edit</a>
                </div>
                </div>

            <% }) %>
           <% } else { %>
            <h1 class="text-zinc-600">No Tasks yet.</h1>
           <% } %>
            
          
            

        </div>

    </div>
    <script src="/javascripts/script.js"></script>
</body>
</html>